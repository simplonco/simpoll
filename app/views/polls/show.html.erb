<h1><%= @poll.title %></h1>
<p><%= @poll.author %></p>
<p><%= @poll.description %></p>
<ul>
	<% @poll.questions.each do |question| %>
		<li>
			<%= question.content %> - 
			<%= link_to "Supprimer la question", poll_question_path(@poll, question), method: :delete %>
			<ul>
				<% question.choices.each do |choice| %>
					<li>
						<%= choice.value %>
					</li>
				<% end %>
			</ul>
		</li>
	<% end %>
</ul>

<ul>
	<li><%= link_to "Ajouter une question", new_poll_question_path(@poll) %></li>
	<li><%= link_to "Retour à l'accueil", root_path %></li>
	<li><%= link_to "Créer un nouveau sondage", new_poll_path %></li>
</ul>